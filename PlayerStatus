 */
public class PlayerStatus
{
    private int health;
    private int score;
    
    //Default Constructor: Player starts with 3 health and 0 points
    public PlayerStatus()
    {
        health = 3;
        score = 0;
    }

    //Removes health
    public void setHealth()
    {
        health--;
    }

    //Returns health
    public int getHealth()
    {
        return health;
    }
  
    //Adds score
    public void setScore()
    {
        score+=10;
    }

    //Returns score
    public int getScore()
    {
        return score;
    }    
}

