public class PlayerStatus
{
    private int health;
    private int score;

    public PlayerStatus()
    {
        health = 3;
        score = 0;

    }
    //not implemented, but an idea
    public void setHealth()
    {
        health--;
    }
    //not implemented, but an idea
    public int getHealth()
    {
        return health;
    }

    public void setScore()
    {
        score++;
    }

    public int getScore()
    {
        return score;
    }    
}
