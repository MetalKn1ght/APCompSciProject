 * Write a description of class BalloonGUI here.
 * 
 * @author (Jason) 
 * @version (5/11/17)
 */

import java.awt.*;
import javax.swing.*;

public class BalloonGUI extends JComponent
{
    private int h = 400;
    private Balloon  balloon = new Balloon(600 ,25, 35);
    private String[]arr = balloon.getArray();
    private int val = balloon.getRandomNumber();
    private String letter = balloon.getLetter();
    private int y = balloon.getY();

    public void paintComponent(Graphics g)
    {
        Graphics2D g2 = (Graphics2D) g;
        balloon.draw(g2);
        Balloon balloonCopy = new Balloon(balloon.getY(), 25, 35);
    }

    public void moveBy(int x, int y)
    {
        if(this.y == 50)
        {
            y = 50;
        }
        else
        {
            balloon.setY(this.y -= y);            
            repaint();
            h--;
        }
    }

    public int getVal()
    {
        return val;
    }

    public String[] getArray()
    {
        return arr;
    }

    public int getX()
    {
        return balloon.getX();
    }

    public String getLetter()
    {
        return letter;
    }

    public int getH()
    {
        return h;
    }

    public int getY()
    {
        return balloon.getY();
    }
}
