/**
 * Write a description of class BalloonGUI here.
 * 
 * @author (Jason) 
 * @version (5/11/17)
 */

import java.awt.*;
import javax.swing.*;

public class BalloonGUI extends JComponent
{
    private int x = 100;
    private int y = 400;
    private int h = 400;
    private Balloon  balloon = new Balloon(x, y, 25, 35);
    private String[]arr=balloon.getArray();
    private int val=balloon.getRandomNumber();

    
    public void paintComponent(Graphics g)
    {
        Graphics2D g2 = (Graphics2D) g;
        balloon.draw(g2);
        Balloon balloonCopy = new Balloon(balloon.getX(), balloon.getY(), 25, 35);

    }

    public void moveBy(int x, int y)
    {
        if(this.y == 25)
        {
            y = 25;
        }
        else
        {
            balloon.setY(this.y -= y);            
            balloon.setX(this.x -= x);
            repaint();
            h--;
        }
    }

    public int getVal()
    {
        return val;
    }

    public String[] getArray()
    {
        return arr;
    }
    
    public int getX()
    {
        return x;
    }
    
    public int getH()
    {
        return h;
    }
    
    public int getY()
    {
        return y;
    }
}
